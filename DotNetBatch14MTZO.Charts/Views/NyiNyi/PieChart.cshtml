<div>
    <canvas id="piechart"></canvas>
</div>


@section scripts {

    <script>
          const ctx = document.getElementById('piechart');
                const config = {
          type: 'pie',
          data: data,
          options: {
            responsive: true,
            plugins: {
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Chart.js Pie Chart'
              }
            }
          },
        };

         new Chart(ctx, config)
    </script>


}
